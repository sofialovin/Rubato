<%= simple_form_for @song, html: {id: "edit-song-form" , novalidate: "novalidate"}  do |f| %>
  <!-- <input id="song-title" type="text" placeholder="Song Title" class="mt-3 mb-0 flex-grow-1"> -->
   <input name="_method" type="hidden" value="patch" />
    <div class='row d-flex justify-content-between align-items-center mr-3'>
     <div>
      <%=f.hidden_field :name, value:'song2', id:'song_name', label:false, input_html:{ novalidate: "novalidate"}, html:{marginRight:0 }  %>
      </div>
      <div id="link-to-show">
        <%= link_to song_path(@song) do %>
          <i class="fas fa-eye"></i>
        <% end %>
       </div>
    </div>
  <%=f.hidden_field :html, value: @song.html, id:'song-html' %>
  <div class="d-flex justify-content-between align-items-end">
  <%= f.input :skill_level, required: false, collection: ['Beginner', 'Intermediate', 'Advanced'], default: 'Beginner', label: false, input_html: {class: 'level-select', novalidate: "novalidate"}, wrapper_html: { class: 'm-0', novalidate: "novalidate"}  %>
  <div id="add-line-btn" class='btn-sm btn-camel'>Add Line</div>
  <div id="save-as-btn" class='btn-sm btn-camel'>Save as</div>
    <%= f.submit "Save Changes", class: "btn-sm btn-camel", id: "edit-song-btn" %>
    <%= link_to "Cancel" , :back,  class: "btn-sm btn-camel"  %>
  </div>
<% end %>


